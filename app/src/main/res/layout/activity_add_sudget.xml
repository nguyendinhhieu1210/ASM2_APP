<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- Header: Cancel Button and Title -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Cancel"
            android:textColor="#FF6F61"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Budget"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Group Input -->
    <LinearLayout
        android:id="@+id/layoutGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:background="#1F1F1F"
        android:padding="16dp"
        android:clipToPadding="false"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvGroupLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="#B3B3B3"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtAddGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Enter Category Name"
            android:inputType="textCapWords"
            android:paddingVertical="8dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#757575"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Amount Input -->
    <LinearLayout
        android:id="@+id/layoutAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutGroup"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="#1F1F1F"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="#B3B3B3"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Enter Amount"
            android:inputType="numberDecimal"
            android:maxLength="15"
            android:paddingVertical="8dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#757575"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Date Range -->
    <LinearLayout
        android:id="@+id/layoutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutAmount"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="#1F1F1F"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date Range"
            android:textColor="#B3B3B3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#292929"
            android:padding="8dp"
            android:text="01/11 - 30/11"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#4CAF50"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:elevation="4dp" />
</RelativeLayout>
